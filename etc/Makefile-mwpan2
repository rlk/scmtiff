N=254
D=5

DATA = mwpan2_16bit.png
NAME = mwpan2-$(N)-$(D)
FORM = -n$(N) -d$(D)
TEXT = -tdesc.txt

# Border and finish.

$(NAME).tif: $(NAME)-M.tif
	scmtiff -T -pborder -o$@ $<
	scmtiff -T -pfinish $(TEXT) $@

# Convert the PDS file and mipmap the result.

$(NAME)-M.tif: $(DATA)
	scmtiff -T -pconvert $(FORM) -o $@ $<
	scmtiff -T -pmipmap $@

clean:
	rm -f $(NAME).tif $(NAME)-M.tif

